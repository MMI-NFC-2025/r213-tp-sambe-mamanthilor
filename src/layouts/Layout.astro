---
import '../styles/global.css';
import Header from '../components/Header.astro';
import footer from '../components/footer.astro';


interface Props {
  titre: string;
}

const { titre } = Astro.props as Props;
---

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>{titre}</title>
    </head>
    <body class="flex flex-col min-h-screen bg-gray-100">
        <Header/>
        <main class="flex-1 p-8 bg-white m-8 rounded-lg shadow-md">
            <h1 class="text-4xl font-bold text-slate-700 mb-4">{titre}</h1>
            <slot />
        </main>
        <footer/>
    </body>
</html>
