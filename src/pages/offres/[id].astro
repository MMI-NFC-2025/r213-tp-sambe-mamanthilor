---
import { getOffre } from '../../js/backend.mjs';
import Base from '../../layouts/Layout.astro';

const { id } = Astro.params;
const offre = await getOffre(id);
---

{offre ? (
    <Base titre={offre.nomMaison}>
        <h2>{offre.nomMaison}</h2>
        <ul>
            <li>{offre.adresse}</li>
            <li>Prix: {offre.prix}€</li>
            <li>Chambres: {offre.nbChambres}</li>
            <li>Salles de bain: {offre.nbSdb}</li>
            <li>Surface: {offre.surface}m²</li>
        </ul>
    </Base>
) : (
    <Base titre="Offre non trouvée">
        <p>Cette offre n'existe pas.</p>
    </Base>
)}